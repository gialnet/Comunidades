<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ServletLoginByUserPass</servlet-name>
        <servlet-class>es.redmoon.comunidades.altas.ServletLoginByUserPass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLoginFacebook</servlet-name>
        <servlet-class>es.redmoon.comunidades.altas.ServletLoginFacebook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletSesion</servlet-name>
        <servlet-class>es.redmoon.comunidades.sesion.ServletSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletGetToken</servlet-name>
        <servlet-class>es.redmoon.comunidades.datosapp.ServletGetToken</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjaxTickets</servlet-name>
        <servlet-class>es.redmoon.comunidades.tickets.AjaxTickets</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLoginByUserPass</servlet-name>
        <url-pattern>/ServletLoginByUserPass.servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLoginFacebook</servlet-name>
        <url-pattern>/ServletLoginFacebook.servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletSesion</servlet-name>
        <url-pattern>/ServletSesion.servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletGetToken</servlet-name>
        <url-pattern>/ServletGetToken.servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjaxTickets</servlet-name>
        <url-pattern>/AjaxTickets.servlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
